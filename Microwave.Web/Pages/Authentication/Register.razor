@page "/register"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Criar nova conta</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8">
        <MudPaper Elevation="3" Class="mud-width-full pa-8">
            <div class="d-flex justify-center">
                <img src="imgs/logo-benner.png" alt="logo benner" width="100" />
            </div>
            <h1>Registrar usuário</h1>
            <EditForm Model="@InputModel" OnValidSubmit="@OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField T="string" Label="E-mail" Required="true" RequiredError="Informe o e-mail"
                    InputType="InputType.Email"
                    Validation="@(new EmailAddressAttribute() { ErrorMessage = "E-mail inválido" })"
                    For="@(()=> InputModel.Email)" @bind-Value="InputModel.Email" />

                <MudTextField T="string" Label="Senha" Required="true" InputType="InputType.Password"
                    For="@(()=> InputModel.Email)" @bind-Value="InputModel.Password" />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressLinear Color="Color.Info" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Cadastrar
                        </MudButton>
                        <MudSpacer />
                        <MudButton Href="login">Já tenho uma conta</MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>
